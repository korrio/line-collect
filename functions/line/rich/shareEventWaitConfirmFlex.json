{
  "type": "bubble",
  "header":
  {
    "type": "box",
    "layout": "horizontal",
    "contents": [
    {
      "type": "text",
      "text": "{{equipcode}}",
      "size": "xl",
      "align": "center",
      "gravity": "center",
      "weight": "bold",
      "color": "#FFFFFF"
    }],
    "backgroundColor": "#FD7007"
  },
  "body":
  {
    "type": "box",
    "layout": "horizontal",
    "spacing": "none",
    "contents": [
    {
      "type": "box",
      "layout": "vertical",
      "flex": 2,
      "contents": [
      {
        "type": "text",
        "text": "{{station}}",
        "size": "xxl",
        "gravity": "center",
        "weight": "bold",
        "color": "#030303",
        "margin": "none",
        "align": "center"
      },
      {
        "type": "box",
        "layout": "vertical",
        "contents": [
        {
          "type": "image",
          "margin": "none",
          "size": "3xl",
          "gravity": "center",
          "align": "center",
          "aspectMode": "fit",
          "aspectRatio": "3:1",
          "url": "{{status}}"
        }]
      },
      {
        "type": "text",
        "text": "{{datecreated}}",
        "flex": 3,
        "margin": "sm",
        "size": "md",
        "gravity": "center",
        "wrap": true,
        "weight": "bold",
        "align": "center"
      },
      {
        "type": "separator",
        "margin": "lg"
      },
      {
        "type": "box",
        "layout": "horizontal",
        "contents": [
        {
          "type": "image",
          "url": "{{image}}",
          "aspectRatio": "150:196",
          "size": "full",
          "aspectMode": "cover",
          "action":
          {
            "type": "uri",
            "label": "action",
            "uri": "{{image_share}}"
          }
        },
        {
          "type": "box",
          "layout": "vertical",
          "contents": [
          {
            "type": "image",
            "url": "{{image}}",
            "aspectMode": "cover",
            "size": "full",
            "aspectRatio": "150:98",
            "align": "center",
            "gravity": "center",
            "action":
            {
              "type": "uri",
              "label": "action",
              "uri": "{{image_share}}"
            }
          },
          {
            "type": "image",
            "url": "{{image}}",
            "aspectRatio": "150:98",
            "size": "full",
            "aspectMode": "cover",
            "action":
            {
              "type": "uri",
              "label": "action",
              "uri": "{{image_share}}"
            }
          }]
        }],
        "margin": "lg"
      },
      {
        "type": "box",
        "layout": "horizontal",
        "contents": [
        {
          "type": "box",
          "layout": "vertical",
          "contents": [
          {
            "type": "text",
            "text": "สาเหตุ:",
            "align": "start"
          },
          {
            "type": "text",
            "text": "{{cause_name}}",
            "weight": "bold",
            "margin": "md"
          }]
        }],
        "margin": "lg"
      },
      {
        "type": "box",
        "layout": "horizontal",
        "contents": [
        {
          "type": "box",
          "layout": "vertical",
          "contents": [
          {
            "type": "text",
            "text": "รายละเอียด:",
            "align": "start"
          },
          {
            "type": "text",
            "text": "{{detail}}",
            "weight": "bold",
            "wrap": true,
            "margin": "lg"
          }]
        }],
        "margin": "lg"
      },
      {
        "type": "separator",
        "margin": "xl"
      },
      {
        "type": "box",
        "layout": "horizontal",
        "contents": [
        {
          "type": "box",
          "layout": "vertical",
          "contents": [
          {
            "type": "text",
            "text": "วันที่เกิดเหตุ",
            "align": "start"
          }]
        },
        {
          "type": "box",
          "layout": "vertical",
          "contents": [
          {
            "type": "text",
            "text": "{{datehappen}}",
            "align": "end",
            "weight": "bold"
          }]
        }],
        "margin": "xxl"
      },
      {
        "type": "box",
        "layout": "horizontal",
        "contents": [
        {
          "type": "box",
          "layout": "vertical",
          "contents": [
          {
            "type": "text",
            "text": "เวลาที่เกิดเหตุ",
            "align": "start"
          }]
        },
        {
          "type": "box",
          "layout": "vertical",
          "contents": [
          {
            "type": "text",
            "text": "{{timehappen}}น.",
            "align": "end",
            "weight": "bold"
          }]
        }],
        "margin": "xxl"
      },
      {
        "type": "box",
        "layout": "horizontal",
        "contents": [
        {
          "type": "box",
          "layout": "vertical",
          "contents": [
          {
            "type": "text",
            "text": "รหัสเหตุการณ์",
            "align": "start"
          }]
        },
        {
          "type": "box",
          "layout": "vertical",
          "contents": [
          {
            "type": "text",
            "text": "{{event_id}}",
            "align": "end",
            "weight": "bold"
          }]
        }],
        "margin": "lg"
      },
      {
        "type": "box",
        "layout": "horizontal",
        "contents": [
        {
          "type": "box",
          "layout": "vertical",
          "contents": [
          {
            "type": "text",
            "text": "รีเลย์ที่ทำงาน",
            "align": "start"
          }]
        },
        {
          "type": "box",
          "layout": "vertical",
          "contents": [
          {
            "type": "text",
            "text": "{{relay}}",
            "align": "end",
            "weight": "bold",
            "wrap": true
          }]
        }],
        "margin": "lg"
      },
      {
        "type": "box",
        "layout": "horizontal",
        "contents": [
        {
          "type": "box",
          "layout": "vertical",
          "contents": [
          {
            "type": "text",
            "text": "การทำงาน",
            "align": "start"
          }]
        },
        {
          "type": "box",
          "layout": "vertical",
          "contents": [
          {
            "type": "text",
            "text": "{{fedderwork}}",
            "align": "end",
            "weight": "bold",
            "wrap": true
          }]
        }],
        "margin": "lg"
      },
      {
        "type": "box",
        "layout": "horizontal",
        "contents": [
        {
          "type": "box",
          "layout": "vertical",
          "contents": [
          {
            "type": "text",
            "text": "รายละเอียดรีเลย์",
            "align": "start"
          }]
        },
        {
          "type": "box",
          "layout": "vertical",
          "contents": [
          {
            "type": "text",
            "text": "เฟส {{phase}}",
            "align": "end",
            "weight": "bold"
          }]
        }],
        "margin": "lg"
      },
      {
        "type": "box",
        "layout": "horizontal",
        "contents": [
        {
          "type": "box",
          "layout": "vertical",
          "contents": [
          {
            "type": "text",
            "text": "แสดง",
            "align": "start"
          }]
        },
        {
          "type": "box",
          "layout": "vertical",
          "contents": [
          {
            "type": "text",
            "text": "{{phase_show}}",
            "align": "end",
            "weight": "bold"
          }]
        }],
        "margin": "lg"
      },
      {
        "type": "box",
        "layout": "horizontal",
        "contents": [
        {
          "type": "box",
          "layout": "vertical",
          "contents": [
          {
            "type": "text",
            "text": "สภาพอากาศ",
            "align": "start"
          }]
        },
        {
          "type": "box",
          "layout": "vertical",
          "contents": [
          {
            "type": "text",
            "text": "{{weather}}",
            "align": "end",
            "weight": "bold"
          }]
        }],
        "margin": "lg"
      },
      {
        "type": "box",
        "layout": "horizontal",
        "contents": [
        {
          "type": "box",
          "layout": "vertical",
          "contents": [
          {
            "type": "text",
            "text": "หมายเหตุอื่นๆ:",
            "align": "start"
          },
          {
            "type": "text",
            "text": "-",
            "weight": "bold",
            "wrap": true,
            "margin": "lg"
          }]
        }],
        "margin": "lg"
      },
      {
        "type": "separator",
        "margin": "xl"
      }],
      "spacing": "none"
    }]
  },
  "footer":
  {
    "type": "box",
    "layout": "vertical",
    "contents": [
    {
      "type": "button",
      "action":
      {
        "type": "uri",
        "label": "แชร์ข้อมูล",
        "uri": "{{share}}"
      },
      "color": "#6F64F8",
      "style": "primary"
    },
    {
      "type": "button",
      "action":
      {
        "type": "uri",
        "label": "รายละเอียด",
        "uri": "{{technical}}"
      },
      "color": "#FD7007",
      "style": "primary",
      "margin": "xxl"
    }],
    "margin": "xxl"
  }
}